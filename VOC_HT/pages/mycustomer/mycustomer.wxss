/* pages/mycustomer/mycustomer.wxss */
page{
  background: #efeff4;
  font-size:12px;
}
scroll-view{  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;  
} 
.item{
  background: #ffffff;
  margin:10px;
  padding:10px;
  border-radius: 6px;
  position: relative;
}
.item .li{
  padding:5px 0;
}
.item .image{
  position: absolute;
  top: 10px;
  right: 10px;
}
.item .image image{
  width:60px;
  height:50px;
}
.item .li .title{
  padding: 0 5px 0 0 ;
}
.item .li .content{
  color: #666
}
.loading{  
  padding: 10rpx;  
  text-align: center;
  position:relative;
}  

@-webkit-keyframes rotate{
  from {-webkit-transform: rotate(0deg);}
  to   {-webkit-transform: rotate(360deg);}
}
.rotate{
 width:16px;
 height:16px;
 position:absolute;
 background-size: contain;  
 animation: rotate 2s linear infinite;
}