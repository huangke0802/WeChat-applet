/* pages/login/login.wxss */
page{
  height: 100%
}
.v_logo{
  width: 100%;
  display:flex;
  flex-direction: row;
  justify-content:center;
}
.logo{
  width: 220px;
  height: 50px;
  padding-bottom: 20px;
}
.activity{
  width: 100%;
  height: 100%;
}
.login_container{
  margin-top: 30px;
}
.login_view{
  display:flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  width: 75%;
  border: 1px solid #2E92F2;
  border-radius: 25px;
  line-height: 45px;
  height: 45px;
  margin: 0 auto;
  margin-bottom: 20px;
  padding-left: 20px;
  padding-right: 20px;
  
}
.login_lable{
  font-size: 12px;
  width: 25%;
}
.login_lableSel{
  font-size: 12px;
  width: 200px;
  color: #808080;
}
.login_text{
  height: 45px;
  font-size: 12px;
}
.login_button{
  width: 200px;
  background: #2E92F2;
  color: #fff;
  border-radius: 25px;
}