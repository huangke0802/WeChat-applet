/* pages/homeicss/homeicss.wxss */
@import "../../app.wxss";

page {
  font-size: 12px;
  width: 100%;
  background: #eee;
}

.activity {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.userinfo {
  display: flex;
  flex-direction: column;
  width: 100%;
  border-bottom: 2px solid #efeff4;
  color: #fff;
}

.info {
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.container {
  padding: 10px;
}

.useraccount {
  padding: 20rpx 0rpx;
  font-size: 30rpx;
  font-weight: 800;
}

.usermessage {
  padding: 0 0px 20rpx 0px;
  color: white;
}

.usermessage image {
  margin-left: 50rpx;
}

.add {
  width: 15vw;
  height: 15vw;
  background: #fff;
  position: fixed;
  bottom: 0;
  background: #1793e5;
  margin: 0 auto;
  left: 0;
  right: 0;
  border-radius: 10vw;
  line-height: 14vw;
  color: #fff;
  text-align: center;
  font-size: 40px;
  margin-bottom: 20px;
}

.addImg {
  width: 100%;
  height: 100px;
  position: fixed;
  bottom: 0px;
  display: flex;
}

.img {
  margin: 0 auto;
}

.nodata {
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 160px;
}

/* .img1{
  margin: 0 auto;
  align-items :center;
}  */

.item {
  display: flex;
  flex-direction: column;
  padding-top: 10px;
  border-bottom-style: solid;
  border-color: #efeff4;
  border-width: 2px;
  background: #fff;
  width: 95%;
  margin: 10px auto;
  border-radius: 6px;
}

.item-top {
  border-bottom: 1px solid #ccc;
  padding: 10px;
}

.message {
  padding: 20rpx 50rpx;
}

.item1 {
  display: flex;
  flex-direction: row;
  padding: 5px 0px;
  color: #403f3f;
  position: relative;
}

.userinfo-avatar {
  width: 40px;
  height: 40px;
  vertical-align: top;
  position: absolute;
  top: -10px;
  right: 0;
}

.item2 {
  display: flex;
  padding: 5px 0px;
  color: #777676;
}

.item1 text:nth-of-type(2) {
  margin-left: 55px;
}

.item2 text:nth-of-type(2) {
  margin-left: 5px;
  margin-bottom: 5px;
}

.item3 {
  width: 90%;
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin: 0 auto;
}

.item_button {
  padding:0 15px;
  height: 20px;
  display: inline-flex;
  color: #2180ff;
  font-size: 10px;
  background: #fff;
  justify-content: center;
  align-items: center;
  border: 1px solid #2180ff;
}

.item_num {
  width: 20px;
  height: 20px;
  background: red;
  border-radius: 10px;
  text-align: center;
  line-height: 20px;
  position: absolute;
  top: -4px;
  right: -4px;
  color: #fff;
}

.item_offButton {
  background: #1793e5;
  color: #fff;
}

.swiper-tab {
  width: 100%;
  height: 100%;
  border-bottom: 2rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
}

.swiper-tab-item {
  height: 100%;
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #666;
}

.on {
  color: #1793e5;
  border-bottom: 5rpx solid #1793e5;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.srcoll_tx {
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item_date {
  display: flex;
  padding: 5px 0px;
  color: #808080;
}

.bg_red {
  background-color: #ff9d9b;
  padding: 5px;
  color: #fff;
}

.bg_blue {
  padding: 5px;
  color: #fff;
  background: #1793e5;
}

.bg_gray {
  padding: 5px;
  color: #fff;
  background: #666;
}

.bg_yellow {
  padding: 5px;
  color: #fff;
  background: #96f;
}

.baseInfo {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.loading {
  padding: 10rpx;
  text-align: center;
  position: relative;
}

.view-btn {
  height: 28px;
  line-height: 28px;
  margin: 0;
}
