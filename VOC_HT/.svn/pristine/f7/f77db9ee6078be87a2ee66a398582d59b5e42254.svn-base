  color: white
}
.usermessage {
  padding: 10rpx 0px 10rpx 0px;
  color: white;
  font-size: 24rpx
}
.usermessage image{
  margin-left: 50rpx
}

.userinfo_tx{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.tx{
  padding-left: 10px;
