  width: 100%;
}
.activity{
   height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column ;
}
.userinfo{
  display: flex;
  flex-direction: column;
  width: 100%;
  border-top:2px solid #EFEFF4;
}
.message {
  width: 100%;
  padding:20rpx 50rpx;
}
.useraccount {
  padding: 20rpx 0rpx;
  font-size: 30rpx;
